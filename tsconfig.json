{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/ContactCard.jsx", "app/components/UpcomingEvents.jsx", "app/components/Newsletter.jsx", "app/dashboard/subscribers/SubscribersList.jsx", "app/dashboard/events/page.jsx", "app/dashboard/artists/page.jsx", "app/dashboard/testimonials/page.jsx", "app/components/Testimonials.jsx", "app/components/FeaturedArtists.jsx", "app/dashboard/settings/page.jsx", "app/(auth)/user/page.jsx"],
	"exclude": ["node_modules"]
}
